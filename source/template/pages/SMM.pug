extends ../_template

block variables
   - var page = 'smm';

block content
   .smm-what
      .container-rel
         h2.title.-bg Что такое SMM
         h4.title.-sm Продвижение бренда в социальных сетях
         img(src="assets/img/smm/inst/instagram-screenshots.png", alt="").smm-what__image
         .smm-what__mobile-content
            a(href="").smm-what__inst-link
               img(src="assets/img/smm/inst/instagram-screenshot_1.png", alt="").smm-what__inst-photo
            a(href="").smm-what__inst-link
               img(src="assets/img/smm/inst/instagram-screenshot_2.png", alt="").smm-what__inst-photo
            a(href="").smm-what__inst-link
               img(src="assets/img/smm/inst/instagram-screenshot_1.png", alt="").smm-what__inst-photo
            a(href="").smm-what__inst-link
               img(src="assets/img/smm/inst/instagram-screenshot_2.png", alt="").smm-what__inst-photo
         object(type="image/svg+xml" data="assets/img/ov-w.svg").bg-circle.-smm-what
   .smm-instagram
      .container-rel
         h2.title.-bg кому подходит инстаграм
         .smm-instagram__list
            -
               var instList = [
                  'Интернет–магазины',
                  'Индустрия красоты',
                  'Развлечения',
                  'Личный PR',
                  'Ректораны и кафе',
                  'Фитнес и здоровье',
                  'Образование',
                  'Недвижимость'
               ]
            - var instListCount = 0
            each a in [1, 2]
               .smm-instagram__list-row
                  each b in [1, 2]
                     .smm-instagram__list-group
                        each c in [1, 2]
                           .smm-instagram__list-col
                              .smm-instagram__item
                                 +svgMix('svg-icon -smm-instagram','inst-icon_' + (instListCount+1))
                                 p.smm-instagram__item-name= instList[instListCount]
                                 - instListCount++
         object(type="image/svg+xml" data="assets/img/ov-gb.svg").bg-circle.-smm-inst
   .smm-task.-bg-w
      .container-rel
         h2.title.-bg Какие задачи решает SMM
         .smm-task__list
            .smm-task__list-wrap
               -
                  var smmTasks = [
                     {name: ['Управляет ', 'репутацией бренда'],
                        desc: 'SMM формирует у аудитории образ компании, который нужен Вам'},
                     {name: ['Повышает лояльность ', 'аудитории к бренду'],
                        desc: 'Присутствие в соц. сетях повышает уровень доверия клиентов к бренду'},
                     {name: null},
                     {name: null},
                     {name: ['Рекламирует акции ', 'и события компании'],
                        desc: 'Компания контактирует с клиентом в привычной для него среде'},
                     {name: ['Реализует ', 'лидогенерацию'],
                        desc: 'Качественный SMM приводит к Вам новых заинтересованных клиентов'}
                  ]
                  var  _key = 1
               each item in smmTasks
                  - if(item.name === null)
                     .smm-task__item.-empty
                  - else
                     .smm-task__item
                        +svgMix('svg-icon -smm-task', 'task-icon_' + _key)
                        p.smm-task__item-name
                           each text, key in item.name
                              - if (key == 0)
                                 = text
                              - else
                                 br
                                 = text
                        p.smm-task__item-desc= item.desc
                        - _key++
         object(type="image/svg+xml" data="assets/img/ov-lg.svg").bg-circle.-smm-task-head
         object(type="image/svg+xml" data="assets/img/ov-lg.svg").bg-circle.-smm-task-foot
   .smm-plus
      .container-rel
         h2.title.-bg преимущества работы с нами
         .smm-plus__wrap
            .smm-plus__area-left
               .smm-plus__detail
                  .smm-plus__detail-naming
                     +svgMix('svg-icon -smm-detail', 'adv-icon_1')
                     p.smm-plus__detail-name Экспертность
                  ul.smm-plus__detail-list
                     li.smm-plus__detail-plus Отслеживаем эффективность каждого объявления
                     li.smm-plus__detail-plus Используем систему сквозной аналитики
                     li.smm-plus__detail-plus Мы ориентируемся на конкретные цели
                     li.smm-plus__detail-plus Измеряемые результаты работы
                  button(data-target="consult").btn-gradient.-long.-copy Получи консультацию бесплатно
            .smm-plus__area-right
               .smm-plus__list
                  -
                     var plus = [
                        'Понятность',
                        'Минимум участия со стороны заказчика',
                        'Под ключ',
                        'Уникальный контент'
                     ]
                  each item, key in plus
                     .smm-plus__item
                        +svgMix('svg-icon -smm-plus', 'adv-icon_' + (key + 2))
                        p.smm-plus__item-name= item
            button(data-target="consult").btn-gradient.-long Получи консультацию 
               span.-hidden бесплатно
         object(type="image/svg+xml" data="assets/img/ov-w.svg").bg-circle.-smm-plus-head
         object(type="image/svg+xml" data="assets/img/ov-or.svg").bg-circle.-smm-plus-left
   .our-work
      .container-rel
         h2.title.-bg как мы работаем
         -
            var steps = [
               {
                  name: 'аналитика и проектирование',
                  team: 'Проектировщик, Дизайнер, Аналитик',
                  process: [
