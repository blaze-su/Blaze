block variables
include common/_mixin

doctype html
html
	head
		meta(charset="utf-8")
		title #{title}
		meta(content="Blase" name="author")
		meta(content="" name="description")
		meta(content="" name="keywords")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" )
		meta(content="ie=edge" http-equiv="x-ua-compatible")
		meta(name="format-detection" content="telephone=no")

		link(rel='stylesheet' href='assets/css/style.css')
		//- link(rel='stylesheet' href='assets/css/foundation.css')
		script(src='assets/js/foundation.js')
		script(src='assets/js/app.js')
		//- <!--[if IE]><![endif]-->
		//- <!--[if lt IE 9]>
		//- script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
		//- <![endif]-->

	body(class=bodyClass)
		block header
			if (page === 'index')
				+first-screen({
					title: ['сайты, которые работают'],
					subtitle: 'Мы создаем совершенство',
					mode: '-dark',
					btn: {btnText: 'Хочу сайт', btnTarget: 'want-site'}
				})
			if (page === 'smm')
				+first-screen({
					title: ['SMM – эффектно', 'и эффективно'],
					mode: '-light',
					btn: {btnText: 'Хочу в топ', btnTarget: 'want-in-top'},
					slider: true
				})

		.main
			block content

		block footer
			+footer('-'+page)
			//- if (page === 'index')
				+footer('-'+page)
			//- if (page === 'smm')
				+footer('-'+page)
			//- include common/_footer.pug

		block popup
			include common/_popup.pug